    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch git-server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}",
            "env":{
                "ENV":"",
                "PATH":"$PATH:/opt/homebrew/bin:/usr/bin",
                "LIBRARY_PATH":"/opt/homebrew/lib/",
                "CGO_ENABLED": "1"
            }
        },
        {
            "name": "Launch git-server-events",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/git-server-events",
            "args": ["run", "--from", "git-server", "--keyring-backend", "test"]
        }
    ]
}